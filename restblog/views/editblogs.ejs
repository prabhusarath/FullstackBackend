<% include ./partials/header %>

<div class="ui container">
    <div class="ui huge header"></div>
<form class="ui form"action="/blogs/<%= blogss._id %>?_method=PUT" method="POST">
  <div class="field">
    <label><strong>Edit <%= blogss.title %> form </strong></label>
  </div>
  <div class="field">
    <label>Title</label>
    <input type="text" name="blogss[title]" value="<%= blogss.title %>">
  </div>
  <div class="field">
    <label>Image</label>
    <input type="text" name="blogss[image]" value="<%= blogss.image %>">
  </div>
  <div class="field">
    <label>Body Content</label>
    <input type="text" name="blogss[body]" value="<%= blogss.body %>">
  </div>
  <button class="ui button" type="submit">Submit</button>
</form>
</div>

<% include ./partials/footer %>