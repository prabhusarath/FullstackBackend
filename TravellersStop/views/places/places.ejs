<%- include ../partials/header %>

<div class="container">
            <header class="jumbotron">
                <div class="container">
                    <h1> Welcome to TravellersStop!!</h1>
                    
                    <p> Lets Explore the Destinations !!</p>
                </div>
                <p><a class="btn btn-success btn-sm" href="/places/new"> New Places Can Be Added Here !!</a> </p>
            </header>
        

  
  <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% ResPlaces.forEach(function(mov){ %>
    <div class="col-lg-4 col-sm-6">
        <img class="img-thumbnail"  src="<%= mov.image %>"> 
                <div class="caption">
                    <h4> <%= mov.name %> </h4>
                </div>
                <p>
                    <a href="/places/<%= mov._id %>" class="btn btn-primary"> More Info</a>
                </p>
    </div>
        <% }) %>
  </div>
  
</div>
<%- include ../partials/footer %>